    <section class="aboutus-page-section spad">
        <div class="container">
            <div class="about-page-text">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="ap-title">
                            <h2>Продажа</h2>
                            <p><a class="btn btn-warning" href="/prodajaacreate">Добавить строчку</a></p>
                            <table class="table">
                                <tr> 
                                    <th scope="col">ID</th> 
                                    <th scope="col">Модель</th> 
                                    <th scope="col">Диагональ</th> 
                                    <th scope="col">Разрешение</th> 
                                    <th scope="col">Вес</th> 
                                    <th scope="col">Яркость</th> 
                                    <th scope="col">Контрастность</th>
                                    <th scope="col">Гарантия</th> 
                                    <th scope="col">Цена</th> 
                                    <th scope="col">Рассрочка</th> 
                                    <th></th> 
                                </tr>
                                {{#each prodajaa}}
                                    <tr>
                                        <td>{{this.id}}</td>
                                        <td>{{this.model}}</td>
                                        <td>{{this.diagonal}}</td>
                                        <td>{{this.razrech}}</td>
                                        <td>{{this.ves}}</td>
                                        <td>{{this.urkost}}</td>
                                        <td>{{this.kontrasnost}}</td>
                                        <td>{{this.garanti}}</td>
                                        <td>{{this.cena}}</td>
                                        <td>{{this.rassrochka}}</td>
                                        <td>
                                            <a class="btn btn-success" href="/prodajaaedit/{{this.id}}">Изменить</a>
                                            <a class="btn btn-light" href="/prodajaashow/{{this.id}}">Просмотр</a>
                                            <form action="delete/{{this.id}}" method="POST" style="display:inline;">
                                                <input class="btn btn-danger" type="submit" value="Удалить" />
                                            </form>
                                        </td>
                                    </tr>
                                {{/each}}
                            </table>
                            
